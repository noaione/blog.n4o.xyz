{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "tabWidth": 2,
  "singleQuote": false,
  "printWidth": 120,
  "useTabs": false,
  "trailingComma": "es5",
  "plugins": ["prettier-plugin-tailwindcss"],
  "endOfLine": "crlf",
  "tailwindFunctions": ["clsx"],
  "tailwindAttributes": ["innerClass", "inner-class"],
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "*.webmanifest",
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
